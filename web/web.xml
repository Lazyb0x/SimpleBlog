<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AddArticleServlet</servlet-name>
        <servlet-class>com.goods.web.AddArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddArticleServlet</servlet-name>
        <url-pattern>/add-article</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DisplayArticleServlet</servlet-name>
        <servlet-class>com.goods.web.DisplayArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayArticleServlet</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.goods.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DeleteArticleServlet</servlet-name>
        <servlet-class>com.goods.web.DeleteArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteArticleServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>com.goods.web.AddUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/createAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditArticleServlet</servlet-name>
        <servlet-class>com.goods.web.EditArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditArticleServlet</servlet-name>
        <url-pattern>/edit-article</url-pattern>
    </servlet-mapping>
</web-app>